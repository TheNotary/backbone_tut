/* Collection Instantiation */

// We need to make sure our donuts collection is populated
// before we render...

donuts.fetch({
  success: function(){
    window.donutCollectionView =
                          instantiateDonutCollectionView();
    donutCollectionView.render();
    $('#app-c').html(donutCollectionView.el);
  }
});


// happens on success of fetching donuts from rails end point
function instantiateDonutCollectionView(){
  var donutCollectionView = new DonutCollectionView({
    collection : donuts
  });
  return donutCollectionView;
}
