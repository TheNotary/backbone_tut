// This board will accept units
window.Board = function(){
  this.units = [];

  this.addUnit = function(unit){
    this.units.push(unit);
  };

  this.remUnit = function(symbol){
    var newArray = [];
    this.units.forEach(function(unit){
      if (unit.symbol == symbol)
        return;
      newArray.push(unit);
    });

    this.units = newArray;
  }

  this.render = function(){
    clearBoard();

    this.units.forEach(function(unit){
      var selector = "#r" + (unit.x) + "c" + (unit.y);
      $(selector).html(unit.symbol);
      $(selector).addClass('donut-unit');
    });
  };

  var clearBoard = function(){
    $('.board div').html("");
    $('.board div').removeClass('donut-unit');
  };
}


window.Unit = function(symbol, x, y){
  this.x = x;
  this.y = y;
  this.symbol = symbol;
}


